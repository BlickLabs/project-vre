.nav
  align-items center
  background-color transparent
  display flex
  height 62px
  justify-content space-between
  left 0
  padding 0 98px
  position fixed
  top 0
  width 100%
  z-index 12

  &:after
    background-color $whiteT1
    bottom 0
    content ""
    height 1px
    left 59px
    position absolute
    right 59px

  &-logo
    &-white
      background-image url("../img/logos/logo-vre-white.png")
      background-repeat no-repeat
      background-size contain
      height 29px
      width 30px

      &:hover
        background-image url("../img/logos/logo-vre-orange.png")

    &-orange
      background-image url("../img/logos/logo-vre-orange.png")

  &-scroll
    background-color $whiteT1
    box-shadow 0 1px 6px 0 rgba(0,0,0,0.1)

  &-option
    align-items center
    color $whiteT1
    display flex
    font-size $fs9
    letter-spacing 1.5px
    text-transform uppercase

    &-gray
      color $grayT1

    &:hover,
    &.active-section
      color $orangeT1

    &:hover
      color $orangeT1

    &-container
      display flex
      flex-direction row

    &-content
      margin-left 20px
      position relative

  &-icon
    &-container
      display flex
      flex-direction row
      height 16px

    &-info
      visibility hidden

    &-phone,
    &-whatsapp
      background-repeat no-repeat
      background-size contain
      cursor pointer
      height 16px
      position relative
      width 16px

      &:hover > .nav-icon-info
        background-color $orangeT1
        bottom -40px
        color $whiteT1
        font-size $fs13
        left -115px
        padding 6px 0
        position absolute
        text-align center
        visibility visible
        width 140px
        z-index 1

        &:after
          background-image url("../img/icons/icon-triangle-orange.png")
          background-repeat no-repeat
          background-size cover
          content ""
          display block
          height 10px
          position absolute
          right 10px
          top -8px
          width 13px

    &-phone
      background-image url("../img/icons/icon-phone-white.png")

    &-phone-gray
      background-image url("../img/icons/icon-phone-gray.png")

    &-phone,
    &-phone-gray
      margin-right 15px

      &:hover
        background-image url("../img/icons/icon-phone-orange.png")

    &-whatsapp
      background-image url("../img/icons/icon-whatsapp-white.png")

    &-whatsapp-gray
      background-image url("../img/icons/icon-whatsapp-gray.png")

    &-whatsapp,
    &-whatsapp-gray
      &:hover
        background-image url("../img/icons/icon-whatsapp-orange.png")

.hamburger
  &-visibility
    position absolute

  &-menu
    &-container
      display none

@media screen and (max-width: 876px)
  .nav
    justify-content space-between
    height 70px
    padding 0 18px

    &-option
      &-container
        display none

  .hamburger
    background-color transparent
    display flex
    height 33px
    justify-content center
    width 33px

    &-visibility
      cursor pointer
      position initial

    &-logo
      height 20px
      width 94px

    &-close
      height 16px
      width 16px

    &-menu
      &-container
        background-color gray
        display inline
        bottom 0
        left 0
        overflow scroll
        padding-bottom 50px
        position fixed
        top 0
        -webkit-transition width 0.5s
        transition width 0.5s
        width 0%
        z-index 13

      &-header
        align-items center
        display flex
        flex-direction row
        justify-content space-between
        padding 22px 36px 50px 36px

      &-body
        margin-left 36px

    &-text
      color $whiteT1
      padding 10px 0

      &-container
        margin 35px 0

    &-active,
    &-text:hover
      font-weight bold
      text-decoration underline

    &-line
      &-icon
        background-color #fff
        height 2px
        width 20px

        &-container
          display flex
          flex-direction column
          justify-content center

        &:nth-child(2)
          margin 4px 0

        &:last-child
          width 12px
