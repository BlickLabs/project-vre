.footer
  align-items center
  background-image url("../img/backgrounds/footer-bg.png")
  background-position bottom right
  background-repeat no-repeat
  background-size contain
  bottom 0
  display flex
  height 244px
  padding-left 80px
  position absolute
  width 100%

  &-content
    display flex
    flex-direction row

  &-column
    &-one
      margin-right 100px

    &-two
      margin-right 60px

    &-two,
    &-three
      width 180px

  &-logo
    height 45px
    width 47px

    &-container
      align-items center
      display flex
      margin-bottom 30px

  &-copyrigth
    color $blackT1
    font-size $fs9
    letter-spacing 1.1px
    margin-left 10px

  &-label,
  &-titles
    color $blackT1
    font-size $fs10
    letter-spacing 2px
    text-transform uppercase

  &-titles
    margin-bottom 15px

    &:after
      content ""
      display block
      border-bottom solid 1px $blackT1
      margin-top 15px

  &-input
    background-color $grayT3
    border none
    color $blackT1
    font-size $fs10
    height 28px
    letter-spacing 0.7px
    margin-right 10px
    padding 0 10px
    width 199px

    &-container
      display flex
      flex-direction row
      margin-top 10px

  &-icon
    background-position center
    background-repeat no-repeat
    background-size contain

    &-container
      margin-right 10px
      min-width 13px

    &.mail
      background-image url("../img/icons/icon-mail-gray.png")
      height 8px
      margin-top 8px
      width 12px

    &.phone
      background-image url("../img/icons/icon-phone-gray.png")
      height 13px
      margin-top 6px
      width 13px

    &.whatsapp
      background-image url("../img/icons/icon-whatsapp-gray.png")
      height 13px
      margin-top 5px
      width 13px

    &.pin
      background-image url("../img/icons/icon-pin-gray.png")
      height 13px
      margin-top 5px
      width 10px

    &-social
      height 21px
      width 21px

      &-container
        margin-top 10px

  &-section
    color $blackT1
    font-size $fs10
    letter-spacing 0.6px
    line-height 24px

    &:hover
      color $orangeT1

    &-container
      display flex
      flex-direction row

      &:hover > .footer-section
        color $orangeT1

      &:hover > .footer-icon-container .footer-icon.mail
        background-image url("../img/icons/icon-mail-orange.png")

      &:hover > .footer-icon-container .footer-icon.phone
        background-image url("../img/icons/icon-phone-orange.png")

      &:hover > .footer-icon-container .footer-icon.whatsapp
        background-image url("../img/icons/icon-whatsapp-orange.png")

      &:hover > .footer-icon-container .footer-icon.pin
        background-image url("../img/icons/icon-pin-orange.png")
