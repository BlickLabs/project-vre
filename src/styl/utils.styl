.btn
  border none
  color $whiteT1
  cursor pointer
  font-size $fs7
  letter-spacing 2.5px
  height 28px
  text-align center
  text-transform uppercase
  position relative
  width 99px
  z-index 1

  &.orange
    background-color $orangeT1
    transition 0.3s

  &.orange:hover
    background-color $orangeT2
    transition 0.3s

  &.black
    background-color transparent

  &.white:before,
  &.black:before{
    position:absolute;
    content:"";
    width:100%;
    height:100%;
    left:0;
    z-index:-1;
    opacity:0;
    transition: all 0.7s cubic-bezier(0.230, 1.000, 0.320, 1.000);
  }

  &.white:after,
  &.black:after {
    content: "";
    position: absolute;
    background-color: $orangeT1;
    bottom: 0;
    left: 0;
    right: 0;
    top: 100%;
    z-index: -2;
    transition: all 0.7s cubic-bezier(0.230, 1.000, 0.320, 1.000); 
  }

  &.white:hover,
  &.black:hover{
    color:white;
    border: 0px #d19b26 solid;
  }
  &.white:hover:before,
  &.black:hover:before {
    opacity: .8;
  }
  &.white:hover:after,
  &.black:hover:after {
    top: 0;
  }

  &.black
    border solid 1px $orangeT1
    color $whiteT1

  &.white
    background-color $whiteT1
    border solid 1px $orangeT1
    color $blackT3
    transition 0.08s ease-in

@keyframes bounce
  0%, 20%, 50%, 80%, 100%
    transform translateY(0)

  40%
    transform translateY(-30px)

  60%
    transform translateY(-15px)

.input-group
  position relative

.form-control
  color $whiteT1
  position relative
  z-index 1
  width 100%
  height 35px
  font-size 16px
  border none
  border-bottom 1px solid lighten(black, 85%)
  background-color transparent

  &:hover
    border-color $orangeT1

  &:hover + label
    color $orangeT1
  
  & + label
    position absolute
    top 10px
    left 3px
    font-size 10px
    letter-spacing 1.1px
    color $whiteT1
    transition all 0.2s ease-out
  
  &:focus
    outline none
    border-width 2px
    border-color $orangeT1
    transition all .2s ease-out
  
  &:focus + label,
  &.has-value + label
    top -15px
    color $color-primary
    font-size 12px

  &.has-value:not(:focus) + label
    color lighten(black, 60%)
