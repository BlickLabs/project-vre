// Site button styles
.btn
  border none
  color $whiteT1
  cursor pointer
  font-size $fs9
  letter-spacing 2.5px
  height 28px
  text-align center
  text-transform uppercase
  padding-top 3px
  -webkit-padding-before 4px
  position relative
  width 99px
  z-index 1

  &.orange
    background-color $orangeT1
    transition 0.3s

  &.orange:hover
    background-color $orangeT2
    transition 0.3s

  &.black
    background-color transparent

  &.white:before,
  &.black:before
    position absolute
    content ""
    width 100%
    height 100%
    left 0
    z-index -1
    opacity 0
    transition all 0.7s cubic-bezier(0.230, 1.000, 0.320, 1.000)

  &.white:after,
  &.black:after
    content ""
    position absolute
    background-color $orangeT1
    bottom 0
    left 0
    right 0
    top 100%
    z-index -2
    transition all 0.7s cubic-bezier(0.230, 1.000, 0.320, 1.000)

  &.white:hover,
  &.black:hover
    color white
    border 0px #d19b26 solid

  &.white:hover:before,
  &.black:hover:before
    opacity 0.8

  &.white:hover:after,
  &.black:hover:after
    top 0

  &.black
    border solid 1px $orangeT1
    color $whiteT1

  &.white
    background-color $whiteT1
    border solid 1px $orangeT1
    color $blackT3
    transition 0.08s ease-in

//Animation of the cover arrow down

@keyframes bounce
  0%, 20%, 50%, 80%, 100%
    transform translateY(0)

  40%
    transform translateY(-30px)

  60%
    transform translateY(-15px)

// Fake of the Material Inputs

.input-group
  position relative

.form-control
  color $whiteT1
  position relative
  z-index 1
  width 100%
  height 35px
  font-size 16px
  border none
  border-bottom 1px solid $whiteT1
  background-color transparent

  &:hover
    border-color $orangeT1

  &:hover + label
    color $orangeT1
  
  & + label
    position absolute
    top 10px
    left 3px
    font-size 10px
    letter-spacing 1.1px
    color $whiteT1
    transition all 0.2s ease-out
  
  &:focus
    outline none
    border-width 2px
    border-color $orangeT1
    transition all .2s ease-out
  
  &:focus + label,
  &.has-value + label
    top -15px
    color $orangeT1
    font-size 12px

  &.has-value:not(:focus) + label
    color $orangeT1

//Fake of the Select Option Inputs

.select
  &-container
    position relative
    width 240px

  &-dropdown
    appearance none
    background-color transparent
    background url("../img/icons/icon-dropdown.png")
    background-position right 7.5px center
    background-repeat no-repeat
    background-size 5px 3px
    border none
    border-bottom 1px solid $whiteT1
    color $whiteT1
    font-size $fs12
    height 35px
    letter-spacing 1.1px
    position relative
    width 240px

    &:focus
      border-bottom 1px solid $orangeT1

    & option
      background-color $orangeT1

  &-label
    color $whiteT1
    font-size 10px
    left 0
    letter-spacing 1.1px
    pointer-events none
    position absolute
    top 10px
    transition 0.3s ease all

  &-dropdown:focus ~ &-label,
  &-dropdown:valid ~ &-label
    color $orangeT1
    font-size $fs12
    top -15px
    transition 0.3s ease all
