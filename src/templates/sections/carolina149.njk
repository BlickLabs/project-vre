{% block js_inline %}
  <script>
    (function() {
      // Insertar PIN en Mapa.
      insertMap([19.380275, -99.177901], 'Carolina 149');

      
      // Interaccion con departamento.
      window.onload = () => {
        const desarrollo = "carolina";
        
        [].forEach.call(document.querySelectorAll('li.item'), (el) => {
          el.addEventListener('click', () => {
            actualizar_caracteristicas(el, desarrollo);
          });
        }); 
      }


      // Iniciar fancybox.
      $().fancybox({
        selector : '[data-fancybox="gallery"]',
        loop     : true
      });


      // 3D
      $('.iframe-option').click(function (e) {
        e.preventDefault();
        $(this)
        .addClass('active')
        .siblings()
        .removeClass('active');
        
        $('.container-360 iframe').attr('src', $(this).attr('data-iframe-url'));
      });
  
      $('.help-360').click(function help360() {
        $(this).remove();
      });
    })();
  </script>
